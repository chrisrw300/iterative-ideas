<section>
  <form class="new-post-form post-form">
    <div class="form-header">
      <h2>Create New Post</h2>
    </div>
    <div class="form-wrapper">
      <input type="text" id="post-title" name="post-title" placeholder="Title"/>
    </div>
    <div class="form-wrapper">
      <textarea id="post-body" name="post-body"> </textarea>
    <button type="submit" class="btn">Create</button>
    </div>
  </form>
</section>


{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <div class="dashboard-post-wrapper">
    {{#each posts as |post|}}
    <div>
      {{> post-info post}}
      <div class="edit-text">
        <a href="/dashboard/edit/{{post.id}}" class="edit-link"><i class="fa fa-pencil-square-o fa-xs" aria-hidden="true"></i> Edit</a>
      </div>
    </div>
    
    
    {{/each}}
  </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
