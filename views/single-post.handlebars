<article class="post-div">
  <div class="post-header">
    <h3 class="post-title">{{post.title}}</h3>
  </div>
  <div class="post-text">
    <span>{{post.post_body}}</span>
  </div>
  <div class="post-body">
      Created by {{post.user.username}} on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    
  </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div class="row">
    <div class="col-6">
      <textarea name="comment-body"></textarea>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
          <button type="submit">Add Comment</button>  
    </div>
  </div>
</form>
{{/if}}
<div>
{{> comments post.comments}}

</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/addlike.js"></script>
{{/if}}